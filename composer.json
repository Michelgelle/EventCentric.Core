{
    "name": "event-centric/aggregates",
    "description": "Event sourced Aggregates",
    "minimum-stability": "dev",
    "license": "MIT",
    "homepage": "https://github.com/event-centric/aggregates",
    "authors": [
        {
            "name": "Mathias Verraes",
            "email": "mathias@verraes.net",
            "homepage": "http://verraes.net"
        }
    ],
    "keywords": ["domain-driven design", "cqrs", "event sourcing", "ddd", "reactive", "aggregates", "event store"],

    "require": {
        "php": ">=5.5",
        "event-centric/identity": "*",
        "event-centric/domain-events": "*",
        "event-centric/when": "*",
        "beberlei/assert": "master"
    },

    "require-dev": {
        "phpunit/phpunit": "@stable"
    },

    "autoload": {
        "psr-0": {
            "": "src"
        },
        "psr-4": {
            "EventCentric\\Aggregates\\": ["src/EventCentric/Aggregates", "tests/EventCentric/Aggregates"]
        }
    },

    "config": {
        "bin-dir": "bin"
    }
}